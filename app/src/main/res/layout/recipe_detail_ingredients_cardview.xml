<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="description"
            type="String" />
        <variable
            name="portion"
            type="String" />
    </data>
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/neutral_zircon"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/header_of_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:textSize="@dimen/size_15sp"
        android:text="Malzemeler"
        android:textColor="@color/primary_cinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line"
        android:layout_marginStart="@dimen/margin_16dp"
        />
    <ImageView
        android:id="@+id/image_fork_knife"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/fork_knife"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        />
    <TextView
        android:id="@+id/portion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_bold"
        android:textSize="12sp"
        android:textColor="@color/primary_raven"

        app:layout_constraintTop_toBottomOf="@id/image_fork_knife"
        app:layout_constraintEnd_toEndOf="@id/image_fork_knife"
        app:layout_constraintStart_toStartOf="@id/image_fork_knife"
        app:layout_constraintBottom_toTopOf="@id/line"

        android:text="@{portion}"
        />
    <TextView
        android:id="@+id/desription_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginVertical="@dimen/margin_16dp"
        android:layout_marginHorizontal="@dimen/margin_8dp"

        android:text="@{description}"
        android:textColor="@color/primary_cinder"
        android:fontFamily="@font/nunito_semibold"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
</layout>