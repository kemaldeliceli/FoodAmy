<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.lesson.foodamy.R" />
        <variable
            name="recipeInfo"
            type="com.lesson.foodamy.model.recipe_dataclass.RecipeInfo" />
        <variable
            name="comment"
            type="com.lesson.foodamy.model.comment_dataclass.Comment" />
        <variable
            name="viewModel"
            type="com.lesson.foodamy.ui.recipedetail.RecipeDetailViewModel" />

    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_constrait_layout"


        app:isDetail="@{true}"
        app:recipeName="@{recipeInfo.title}"
        />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snackbarCoord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/layout_height_50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        />

    <ScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        >

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout"
    android:background="@color/app_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.recipedetail.RecipeDetailFragment">



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/detail_recipe_top"
        android:layout_width="match_parent"
        android:layout_height="505dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/big_food_image"
                android:layout_width="0dp"
                android:layout_height="375dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:src="@drawable/food_preview"

                app:imageUrl="@{recipeInfo.images[0].url}"
                app:placeHolder="@{@drawable/user_icon}"
                android:scaleType="centerCrop"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="@{recipeInfo.isEditorChoice ? View.VISIBLE : View.INVISIBLE}"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                >


                <ImageView
                    android:layout_width="@dimen/layout_width_40dp"
                    android:layout_height="@dimen/layout_height_40dp"
                    android:src="@drawable/ellipse"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/editors_pick_icon"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15sp"
                android:text="@{recipeInfo.title}"
                android:fontFamily="@font/nunito_bold"

                android:layout_marginTop="@dimen/margin_8dp"
                app:layout_constraintTop_toBottomOf="@id/big_food_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/margin_8dp"
                />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15sp"
                android:text="@{recipeInfo.category.name}"
                android:fontFamily="@font/nunito_semibold"

                app:layout_constraintTop_toBottomOf="@id/food_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line"

                android:layout_marginStart="@dimen/margin_8dp"
                />

            <TextView
                android:id="@+id/share_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_13sp"
                android:text="@{recipeInfo.difference}"
                android:fontFamily="@font/nunito_semibold"

                app:layout_constraintTop_toBottomOf="@id/big_food_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/horizontal_line"
                android:layout_marginEnd="@dimen/margin_8dp"
                />
            <View
                android:id="@+id/horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height_1dp"
                android:background="@color/neutral_zircon"

                app:layout_constraintTop_toBottomOf="@id/big_food_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <View
                android:id="@+id/vertical_line"
                android:orientation="vertical"
                android:layout_width="@dimen/layout_width_1dp"
                android:layout_height="0dp"
                android:background="@color/neutral_zircon"

                app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />
            <ImageButton
                android:id="@+id/comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comment_icon"

                android:background="@color/white"

                android:layout_marginTop="@dimen/margin_8dp"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_line"

                />


            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(recipeInfo.commentCount)}"
                android:textSize="@dimen/size_13sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/primary_red"


                app:layout_constraintTop_toBottomOf="@id/comment_icon"
                app:layout_constraintStart_toStartOf="@id/comment_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline1"

                android:layout_marginEnd="@dimen/margin_16dp"
                />

            <TextView
                android:id="@+id/comment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Yorum"
                android:textColor="@color/primary_raven"

                android:textSize="@dimen/size_13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/comment_count"

                app:layout_constraintTop_toBottomOf="@id/comment_icon" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />


            <ImageView
                android:id="@+id/like_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/like_icon"
                android:background="@color/white"

                android:layout_marginTop="@dimen/margin_8dp"
                app:layout_constraintTop_toBottomOf="@id/horizontal_line"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vertical_line"

                android:onClick="@{()->viewModel.likeRecipe()}"

                android:tint="@{viewModel.isLiked ? @color/primary_red : @color/primary_raven}"
                />




            <TextView
                android:id="@+id/like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(recipeInfo.likeCount)}"
                android:textSize="@dimen/size_13sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/primary_red"


                app:layout_constraintTop_toBottomOf="@id/like_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline2"

                android:layout_marginEnd="@dimen/margin_16dp"
                />

            <TextView
                android:id="@+id/like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="Beğeni"
                android:textColor="@color/primary_raven"
                android:textSize="@dimen/size_13sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/like_count"
                app:layout_constraintTop_toBottomOf="@id/like_icon"

                android:layout_marginStart="@dimen/margin_8dp"
                />


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/recipe_user_info"
        layout="@layout/recipe_detail_user_cardview"
        app:user="@{recipeInfo.user}"

        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_recipe_top"

        android:layout_marginTop="@dimen/margin_16dp"
        />
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients"
        layout="@layout/recipe_detail_ingredients_cardview"

        app:layout_constraintTop_toBottomOf="@id/recipe_user_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_16dp"

        android:layout_marginTop="@dimen/margin_16dp"
        app:description="@{recipeInfo.ingredients}"
        app:portion="@{recipeInfo.numberOfPerson.text}"
        />
    <include
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/recipe_detail_recipe_cardview"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_16dp"
        app:time="@{recipeInfo.timeOfRecipe.text}"
        app:directions="@{recipeInfo.directions}"

        />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/first_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/app_background"
        app:layout_constraintTop_toBottomOf="@id/recipe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_16dp"
        android:visibility="@{comment.user==null ? View.GONE : View.VISIBLE}"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@color/neutral_white"
            android:layout_marginBottom="@dimen/margin_16dp"
            >

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/neutral_zircon"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/header_of_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textSize="@dimen/size_15sp"
                android:text="Yorumlar"
                android:textColor="@color/primary_cinder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/line"
                android:layout_marginStart="@dimen/margin_16dp"
                />



            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/layout_width_40dp"
                android:layout_height="@dimen/layout_height_40dp"

                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginTop="@dimen/margin_8dp"

                android:scaleType="centerCrop"
                app:imageUrl="@{comment.user.image.url}"
                app:placeHolder="@{@drawable/no_user_image}"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line"

                app:shapeAppearanceOverlay="@style/CircularImage" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_8dp"

                android:fontFamily="@font/nunito_bold"
                android:text="@{comment.user.username}"
                android:textColor="@color/primary_cinder"
                android:textSize="@dimen/size_13sp"

                app:layout_constraintBottom_toTopOf="@id/recipe_count"
                app:layout_constraintStart_toEndOf="@id/userImage"
                app:layout_constraintTop_toBottomOf="@id/line" />

            <TextView
                android:id="@+id/recipes_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_2dp"

                android:layout_marginBottom="@dimen/padding_8dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="@string/recipes"

                android:textColor="@color/primary_raven"
                android:textSize="@dimen/size_13sp"


                app:layout_constraintStart_toEndOf="@id/recipe_count"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView
                android:id="@+id/recipe_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_marginBottom="@dimen/padding_8dp"

                android:fontFamily="@font/nunito_semibold"
                android:text="@{String.valueOf(comment.user.recipe_count)}"
                android:textColor="@color/primary_raven"

                android:textSize="@dimen/size_13sp"

                app:layout_constraintStart_toEndOf="@id/userImage"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView
                android:id="@+id/follower_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/padding_8dp"

                android:fontFamily="@font/nunito_semibold"
                android:text="@string/follower"
                android:textColor="@color/primary_raven"

                android:textSize="@dimen/size_13sp"

                app:layout_constraintStart_toEndOf="@id/follower_count"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView
                android:id="@+id/follower_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="@dimen/margin_2dp"
                android:layout_marginBottom="@dimen/padding_8dp"

                android:fontFamily="@font/nunito_semibold"
                android:text="@{String.valueOf(comment.user.following_count)}"
                android:textColor="@color/primary_raven"

                android:textSize="@dimen/size_13sp"

                app:layout_constraintStart_toEndOf="@id/recipes_text"
                app:layout_constraintTop_toBottomOf="@id/username" />

            <TextView
                android:id="@+id/difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/primary_raven"
                app:layout_constraintTop_toBottomOf="@id/userImage"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginStart="@dimen/margin_16dp"
                android:text="@{comment.difference}"
                />
            <TextView
                android:id="@+id/description_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_15sp"

                app:layout_constraintTop_toBottomOf="@id/difference"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"



                android:layout_marginVertical="@dimen/margin_8dp"
                android:layout_marginHorizontal="@dimen/margin_16dp"
                android:text="@{comment.text}"
                android:textColor="@color/primary_cinder"
                android:fontFamily="@font/nunito_semibold"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/comment_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_constraintTop_toBottomOf="@id/first_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:text="Yorum Ekle"

        android:onClick="@{()-> viewModel.goToCommentPage()}"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>