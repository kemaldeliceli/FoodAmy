<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="recipeInfo"
            type="com.lesson.foodamy.model.recipe_dataclass.RecipeInfo" />
        <variable
            name="comment"
            type="com.lesson.foodamy.model.comment_dataclass.Comment" />


    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/main_text"
        android:foregroundGravity=""
        android:textColor="@color/primary_cinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/layout_height_50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       android:translationZ="@dimen/layout_height_50dp"
        />
    <include
        android:id="@+id/top_layout"
        layout="@layout/top_constrait_layout"


        app:isDetail="@{true}"
        app:recipeName="@{recipeInfo.title}"
        />


    <ScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        >

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraint_layout"
    android:background="@color/app_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.recipedetail.RecipeDetailFragment">

    <include
        android:id="@+id/detail_recipe_top"
        layout="@layout/recipe_detail_top_cardview"
        app:recipeInfo="@{recipeInfo}"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <include
        android:id="@+id/recipe_user_info"
        layout="@layout/recipe_detail_user_cardview"
        app:user="@{recipeInfo.user}"

        android:layout_width="0dp"
        android:layout_height="wrap_content"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_recipe_top"

        android:layout_marginTop="@dimen/margin_16dp"
        />
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ingredients"
        layout="@layout/recipe_detail_ingredients_cardview"

        app:layout_constraintTop_toBottomOf="@id/recipe_user_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/margin_16dp"

        android:layout_marginTop="@dimen/margin_16dp"
        app:description="@{recipeInfo.ingredients}"
        app:portion="@{recipeInfo.numberOfPerson.text}"
        />
    <include
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/recipe_detail_recipe_cardview"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_16dp"
        app:time="@{recipeInfo.timeOfRecipe.text}"
        app:directions="@{recipeInfo.directions}"

        />
    <include
        android:id="@+id/first_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/recipe_detail_comment_cardview"
        app:layout_constraintTop_toBottomOf="@id/recipe"
        android:layout_marginTop="@dimen/margin_16dp"
        app:comment="@{comment}"
        android:visibility="@{comment.user==null ? View.GONE : View.VISIBLE}"

        />
    <Button
        android:id="@+id/comment_button"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        app:layout_constraintTop_toBottomOf="@id/first_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginHorizontal="@dimen/margin_16dp"
        android:text="Yorum Ekle"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>